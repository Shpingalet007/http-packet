{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "allowJs": true,
    "target": "es2015",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["es2015.promise", "es2015"],
    "declaration": true,
  },
  "include": [
    "src/**/*.ts",
    "types"
  ],
  "exclude": [
    "coverage",
    "node_modules"
  ],
  "ts-node": {
    "files": true
  }
}
